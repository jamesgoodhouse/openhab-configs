rule "Startup"
when
  System started
then
  Present.members.forEach[ SwitchItem s | s.sendCommand(OFF) ]

  // fireplace
  if (Fireplace_Thermostat_SetPoint.state == NULL) {
    Fireplace_Thermostat_SetPoint.postUpdate(60)
  }
  if (Fireplace_Thermostat_Hysteresis.state == NULL) {
    Fireplace_Thermostat_Hysteresis.postUpdate(2)
  }
end
