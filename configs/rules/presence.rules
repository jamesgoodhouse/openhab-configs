rule "Presence Delay — Leaving"
when
  Item Present changed to OFF
then
  createTimer(now.plusSeconds(30), [ |
    if (Present.state == OFF) {
      PresentWithDelay.postUpdate(OFF)
    }
  ])
end

rule "Presence Delay — Return"
when
  Item Present changed to ON
then
  PresentWithDelay.postUpdate(ON)
end

rule "James Gone"
when
  Item Present_James changed from ON to OFF
then
  val telegramAction = getActions("telegram","telegram:telegramBot:boty_mcbotface")
  telegramAction.sendTelegram("James is gone methinks")
end

rule "James Home"
when
  Item Present_James changed from OFF to ON
then
  val telegramAction = getActions("telegram","telegram:telegramBot:boty_mcbotface")
  telegramAction.sendTelegram("James is home methinks")
end
