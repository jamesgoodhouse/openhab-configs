rule "Sunset Rule"
when
  Channel "astro:sun:home:set#event" triggered START
then
  var int dimLevel = 6
  var int dimLevelStep = 1
  var int maxDimLevel = 10
  var int timeoutNanos = 1000000
  var Timer timer = null

  if (timer === null) {
    timer = createTimer(now.plusSeconds(0), [ |
      Light_Landing_Dimmer.sendCommand(dimLevel)
      if (dimLevel == maxDimLevel) {
        timer = null // cancel timer
      } else {
        dimLevel = dimLevel + dimLevelStep
        timer.reschedule(now.plusNanos(timeoutNanos))
      }
    ])
  }
end

rule "Midnight"
when
  Time is midnight
then
  Light_Landing_Dimmer.sendCommand(0)
end
