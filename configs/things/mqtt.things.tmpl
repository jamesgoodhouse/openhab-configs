Bridge mqtt:broker:mosquitto [ host="mosquitto.data" ] {
  Thing topic james_mobile_bluetooth "James' Mobile Bluetooth" @ "Home" {
    Channels:
      Type string : confidence "Confidence" [
        stateTopic="home/bluetooth/raspberrypi/james_mobile",
        transformationPattern="JSONPATH:$.confidence"
      ]
      Type string : state "State" [
        stateTopic="home/bluetooth/raspberrypi/james_mobile/device_tracker"
      ]
  }
}
