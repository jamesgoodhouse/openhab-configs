Bridge mqtt:broker:mosquitto [
  host="{{ (ds "secrets").things.mqtt.host }}",
  port={{ (ds "secrets").things.mqtt.port }},
  secure={{ (ds "secrets").things.mqtt.secure }},
  username="{{ (ds "secrets").things.mqtt.username }}",
  password="{{ (ds "secrets").things.mqtt.password }}",
  certificatepin=false,
  publickeypin=false
] {
  Thing topic mqtt_sensor_front_door {
    Channels:
      Type string : state "State" [
        stateTopic="konnected/front_door"
      ]
  }
  Thing topic mqtt_sensor_deck_door {
    Channels:
      Type string : state "State" [
        stateTopic="konnected/deck_door"
      ]
  }
  Thing topic mqtt_sensor_garage_entry_door {
    Channels:
      Type string : state "State" [
        stateTopic="konnected/garage_entry_door"
      ]
  }
  Thing topic mqtt_sensor_motion_detector {
    Channels:
      Type string : state "State" [
        stateTopic="konnected/motion_detector"
      ]
  }
}
