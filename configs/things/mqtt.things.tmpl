Bridge mqtt:broker:mosquitto [ host="mosquitto.data" ] {
  Thing topic james_mobile_bluetooth "James' Mobile Bluetooth" @ "Home" {
    Channels:
      Type number : rssi "RSSI" [
        stateTopic="home/bluetooth/{{ (ds "secrets").things.bluetooth.james_mobile.mac_address }}/rssi",
        unit="dBm"
      ]
      Type string : present "Present" [ stateTopic="home/bluetooth/{{ (ds "secrets").things.bluetooth.james_mobile.mac_address }}/present" ]
  }
}
